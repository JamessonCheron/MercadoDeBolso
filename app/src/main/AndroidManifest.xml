<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mercadodebolso.mercadodebolso">

    <application
        android:debuggable="true"
        android:allowBackup="true"
        android:icon="@mipmap/ic_mercadinho"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity
            android:name=".view.LoginView">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".view.CadastroUsuario"
            android:parentActivityName=".view.LoginView">
        </activity>

        <activity
            android:name=".view.Main"
            android:label="@string/app_name"
            >

        </activity>

        <activity
            android:name=".view.PopUpCriarLista"
            android:theme="@style/AppTheme.PopUpTheme"
            android:parentActivityName=".view.Main">

        </activity>

        <activity
            android:name=".view.ListaView"
            android:parentActivityName=".view.Main">
        </activity>

        <activity
            android:name=".view.PedidoView"
            android:parentActivityName=".view.ListaView">
        </activity>
        <activity
            android:name=".view.HistoricoView"
            android:parentActivityName=".view.Main">

        </activity>

        <activity
            android:name=".view.AddItem"
            android:parentActivityName=".view.ListaView">

        </activity>

        <activity
            android:name=".view.CadastroConta">
        </activity>

        <activity
            android:name=".view.ItemPopup"
            android:theme="@style/AppTheme.PopUpTheme"
            android:parentActivityName=".view.AddItem"
            >
            <!--//android:theme="@android:style/Theme.Translucent.NoTitleBar"-->
        </activity>

        <!-- ATTENTION: This was auto-generated to add Google Play services to your project for
             App Indexing.  See https://g.co/AppIndexing/AndroidStudio for more information. -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

    </application>

</manifest>
