<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- The main content view -->
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:id="@+id/MainLista"
        android:background="@color/quaseBranco"
        android:fitsSystemWindows="true"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/bg1"
            android:paddingLeft="15dp"
            android:paddingRight="5dp"
            android:id="@+id/linearLayout3"
            android:backgroundTintMode="multiply">

            <Button
                android:id="@+id/btn_menu"
                android:layout_width="35dp"
                android:layout_height="40dp"
                android:background="@drawable/ic_action_menu"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pedido"
                android:textColor="@color/branco"
                android:textSize="20dp"
                android:layout_marginLeft="15dp"
                android:layout_toEndOf="@+id/btn_menu"
                android:layout_centerVertical="true"
                />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/linearLayout4"
            android:layout_above="@+id/listaFooter"
            android:layout_below="@+id/linearLayout3"
            android:layout_alignParentStart="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:padding="15dp"
            >
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:gravity="center_vertical"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lista de compras: "
                    android:textColor="@color/cinzaEscuro"
                    android:textSize="16dp"

                    />
                <TextView
                    android:id="@+id/nomeLista"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nome da lista (n itens)"
                    android:textColor="@color/cinzaEscuro"
                    android:textSize="16dp"

                    />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:gravity="center_vertical"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PreÃ§o: "
                    android:textColor="@color/cinzaEscuro"
                    android:textSize="16dp"

                    />
                <TextView
                    android:id="@+id/precoLista"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="R$00,00"
                    android:textColor="@color/cinzaEscuro"
                    android:textSize="16dp"

                    />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:gravity="center_vertical"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Frete: "
                    android:textColor="@color/cinzaEscuro"
                    android:textSize="16dp"

                    />
                <TextView
                    android:id="@+id/precoFrete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="R$00,00"
                    android:textColor="@color/cinzaEscuro"
                    android:textSize="16dp"

                    />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="16dp"
                android:gravity="center_vertical"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Status do pedido: "
                    android:textColor="@color/cinzaEscuro"
                    android:textSize="16dp"

                    />
                <TextView
                    android:id="@+id/statusPedido"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Aguardando pagamento"
                    android:textColor="@color/cinzaEscuro"
                    android:textSize="20dp"

                    />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="20dp"
                android:gravity="center_vertical"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total do pedido: "
                    android:textColor="@color/cinzaEscuro"
                    android:textSize="24dp"

                    />
                <TextView
                    android:id="@+id/precoTotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="R$00,00"
                    android:textColor="@color/cinzaEscuro"
                    android:textSize="24dp"

                    />
            </LinearLayout>

        </LinearLayout>


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/footer"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:background="@color/quaseBranco">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    >
                    <Button
                        android:id="@+id/pagar"
                        android:layout_width="0dp"
                        android:layout_weight="0.6"
                        android:layout_height="60dp"
                        android:text="Fazer pagamento"
                        android:backgroundTint="@color/verdeOK"

                        />
                    <Button
                        android:id="@+id/cancelar"
                        android:layout_weight="0.4"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:text="Cancelar Pedido"
                        android:backgroundTint="@color/vermelhoAlert"
                        android:textColor="@color/branco"


                        />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
    <!-- The navigation drawer -->
    <RelativeLayout
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:id="@+id/drawerPane"
        android:background="@color/quaseBranco"
        android:layout_gravity="start"
        >

        <!-- Profile Box -->
        <RelativeLayout
            android:id="@+id/profileBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bg1"
            android:padding="8dp" >



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/app_name"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="@string/app_name"
                    android:textColor="#fff"
                    android:gravity="center_vertical"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:layout_marginBottom="10dp"/>

                <TextView
                    android:id="@+id/userName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jaminho Arrasa"
                    android:textColor="#fff"
                    android:textSize="16dp"
                    />

            </LinearLayout>
        </RelativeLayout>

        <!-- List of Actions (pages) -->
        <ListView
            android:id="@+id/navList"
            android:layout_width="280dp"
            android:layout_height="match_parent"
            android:layout_below="@+id/profileBox"
            android:choiceMode="singleChoice"
            android:background="#ffffffff" />

    </RelativeLayout>

</android.support.v4.widget.DrawerLayout>